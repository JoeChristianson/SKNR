<section class="col-6">

<h2>Login</h2>

<form class="form login-form">
  <div class="form-group">
    <label for="email-login">email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">login</button>
  </div>
</form>
</section>
<section class="col-6">

<h2>Register</h2>

<form class="form register-form">
      <div class="form-group">
    <label for="username-register">User Name:</label>
    <input class="form-input" type="text" id="username-register" />
  </div>
  <div class="form-group">
      
    <label for="email-register">Enter email:</label>
    <input class="form-input" type="text" id="email-register" />
  </div>
  <div class="form-group">
    <label for="password-register">Choose password:</label>
    <input class="form-input" type="password" id="password-register" />
  </div>
    <div class="form-group">
    <label for="password-confirm">Confirm password:</label>
    <input class="form-input" type="password" id="password-confirm" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">register</button>
  </div>
</form>
</section>

<script src="./scripts/login.js"></script>